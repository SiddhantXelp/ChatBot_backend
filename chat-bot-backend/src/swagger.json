{
    "openapi": "3.0.0",
    "info": {
        "version": "1.0.0",
        "title": "Seans-TypeScript-NodeJS-CRUD-REST-API-Boilerplate",
        "description": "A minimal and easy to follow example of what you need to create a CRUD style API in NodeJs using TypeScript",
        "license": {
            "name": "MIT",
            "url": "https://opensource.org/licenses/MIT"
        }
    },
    "servers": [
        {
            "url": "/",
            "description": "Local Dev"
        },
        {
            "url": "/widget",
            "description": "With docker-compose and nginx proxy"
        }
    ],
    "tags": [
        {
            "name": "widget",
            "description": "API for widgets"
        },
        {
            "name":"auth",
            "description":"APIs for auth"
        }
    ],
    "paths": {
        "/widget": {
            "post": {
                "tags": [
                    "widget"
                ],
                "summary": "Create a new widget in system",
                "requestBody": {
                    "description": "widget Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "powered_by": {
                                        "type": "string"
                                    },
                                    "language": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "powered_by": {
                                    "type": "string"
                                },
                                "language": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    }
                }
            }
        },
        "/widget/{id}": {
            "parameters": [
                {
                    "name": "id",
                    "in": "path",
                    "required": true,
                    "description": "ID of the widget that we want to match"
                }
            ],
            "get": {
                "tags": [
                    "widget"
                ],
                "summary": "Get widget with given ID",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "widget with id",
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "powered_by": {
                                    "type": "string"
                                },
                                "language": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "powered_by": {
                                    "type": "string"
                                },
                                "language": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Failed. widget not found."
                    }
                }
            },
            "put": {
                "summary": "Update widget with given ID",
                "tags": [
                    "widget"
                ],
                "requestBody": {
                    "description": "widget Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "title": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "powered_by": {
                                        "type": "string"
                                    },
                                    "language": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "description": "widget with new values of properties",
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "powered_by": {
                                    "type": "string"
                                },
                                "language": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "properties": {
                                "title": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "powered_by": {
                                    "type": "string"
                                },
                                "language": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Failed. Bad post data."
                    },
                    "404": {
                        "description": "Failed. widget not found."
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Login a user",
                "requestBody": {
                    "description": "login Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "login successfull",
                        "schema": {
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/v1/auth/signup": {
            "post": {
                "tags": [
                    "auth"
                ],
                "summary": "Create a user",
                "requestBody": {
                    "description": "signup Object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "orgName": {
                                        "type": "string"
                                    },
                                    "phoneNumber": {
                                        "type": "number"
                                    },
                                    "typeOfOrg": {
                                        "type": "string"
                                    },
                                    "street1": {
                                        "type": "string"
                                    },
                                    "street2": {
                                        "type": "string"
                                    },
                                    "city": {
                                        "type": "string"
                                    },
                                    "country": {
                                        "type": "string"
                                    },
                                    "zipCode": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "user created successfull",
                        "schema": {
                            "properties": {
                                "email": {
                                    "type": "string"
                                },
                                "password": {
                                    "type": "string"
                                },
                                "orgName": {
                                    "type": "string"
                                },
                                "phoneNumber": {
                                    "type": "number"
                                },
                                "typeOfOrg": {
                                    "type": "string"
                                },
                                "street1": {
                                    "type": "string"
                                },
                                "street2": {
                                    "type": "string"
                                },
                                "city": {
                                    "type": "string"
                                },
                                "country": {
                                    "type": "string"
                                },
                                "zipCode": {
                                    "type": "number"
                                }
                            }
                        }
                    },
                   
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}